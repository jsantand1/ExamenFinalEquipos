<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/computadoresCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/card_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.24">

                <ImageView
                    android:id="@+id/imgCard"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_weight="0.64"
                android:padding="@dimen/card_padding">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/tvModelo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/primaryText"
                        android:text="MODELO"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/tvProcesador"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="PROCESADOR"
                        android:layout_weight="0.7"/>
                    <TextView
                        android:id="@+id/tvMemoria"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="MEMORIA"
                        android:layout_weight="0.3"
                        android:gravity="right"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/tvDiscoDuro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="DISCO DURO"
                        android:layout_weight="0.7"/>
                    <TextView
                        android:id="@+id/tvMarca"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="MARCA"
                        android:layout_weight="0.3"
                        android:gravity="right"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_weight="0.12"
                android:padding="@dimen/card_padding">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    cardview:srcCompat="@drawable/ic_keyboard_arrow_right"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>